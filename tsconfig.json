{
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "removeComments": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  }
}